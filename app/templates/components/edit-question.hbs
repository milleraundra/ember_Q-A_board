{{#if isEditFormShowing}}
  <form>
    <div class="input-field">
      <label for="editQuestion"></label>
      {{input type="text" value=question.question }}
    </div>
    <div class="input-field">
      <label for="body"></label>
      {{textarea rows="5" type="text" value=question.body}}
    </div>
    <button class="btn"{{action 'updateQuestion' question}}>Submit</button>

    <button class="btn grey"{{action 'hideEditForm' }}>Close</button>

    <button class="btn deep-orange darken-3"{{action 'deleteQuestion' question }}>Delete Question</button>
  </form>
{{else}}
  <a {{action 'showEditForm'}} class="btn blue-grey lighten-3 right-align">Edit</a>
{{/if}}
