<div class="row">
  <div class="col s12">
    <div class="card deep-orange lighten-4">
      <div class="card-content">
        <br>
        <p>{{answer.body}}</p>
        <br>
        <p>{{answer.author}} answered on {{answer.date}}</p>
        <p>Rating: {{answer.rating}}</p>
        <hr>
        <!-- <div class="card-action"> -->
          <div class="row">
            <div class="col s12 m6">
              <h5>Rate this answer:</h5>
              {{#unless ratingSelected}}
              <button {{action 'plusRating' answer}}class="btn">Good</button>
              <button {{action 'decreaseRating' answer}} class="btn">Bad</button>
              {{else}}
              <p>Thank you for your rating!</p>
              {{/unless}}
            </div>
            <div class="col s12 m6">
              {{edit-answer
                answer=answer
                question=question
                editAnswer="editAnswer"
                deleteAnswer="deleteAnswer"}}
            </div>
          </div>
        <!-- </div> -->
      </div>
    </div>
  </div>
</div>
