{{#if isEditFormShowing}}
  <form>
    <form>
      <div class="input-field">
        <label for="body"></label>
        {{textarea type="text" value=answer.body}}
      </div>
      <button class="btn"{{action 'updateAnswer' answer}}>Submit</button>

      <button class="btn grey"{{action 'hideEditForm'}}>Close Edit</button>

      <button {{action 'deleteAnswer' answer question}}class="btn deep-orange darken-3">Delete Answer</button>
    </form>
  </form>
{{else}}
  <a {{action 'showEditForm'}} class="btn blue-grey lighten-3 right-align">Edit</a>
{{/if}}
