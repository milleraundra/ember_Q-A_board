<div class="row">
  <div class="col s12 m8">
    <h2>{{model.title}}</h2>
    <div class="card deep-orange lighten-4">
      <div class="card-content">
        <span class="card-title">{{model.question}}</span>
        <p>{{model.body}}</p>
          <br>
        <p>Asked by {{model.author}} on {{model.date}}</p>
        <div class="card-action">
          <div class="row">
            <div class="col s12 m6">
              {{add-answer question=model addAnswer="addAnswer"}}
            </div>
            <div class="col s12 m6">
              {{edit-question question=model updateQuestion="updateQuestion"}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
