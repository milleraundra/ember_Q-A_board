<h3>Question:</h3>
<div class="row">
  <div class="col s12">
    <h2>{{model.title}}</h2>
    <div class="card deep-orange lighten-4">
      <div class="card-content">
        <span class="card-title">{{model.question}}</span>
        <p>{{model.body}}</p>
          <br>
        <p>Asked by {{model.author}} on {{model.date}}</p>
        <hr>
        <!-- <div class="card-action"> -->
          <div class="row">
            <div class="col s12 m6">
              {{add-answer
                question=model
                addAnswer="addAnswer"}}
            </div>
            <div class="col s12 m6">
              {{edit-question
                question=model
                updateQuestion="updateQuestion"
                deleteQuestion="deleteQuestion"}}
            </div>
          </div>
        <!-- </div> -->
      </div>
    </div>
  <h4>Answers:</h4>
    {{#each model.answers as |answer|}}
    {{answer-tile
      answer=answer
      question=model
      editAnswer="editAnswer"
      deleteAnswer="deleteAnswer"
      plusRating="plusRating"
      decreaseRating="decreaseRating"}}
    {{/each}}
  </div>
</div>
